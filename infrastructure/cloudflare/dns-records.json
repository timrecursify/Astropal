{
  "domain": "astropal.io",
  "records": [
    {
      "type": "CNAME",
      "name": "@",
      "content": "astropal.pages.dev",
      "ttl": 1,
      "proxied": true,
      "comment": "Root domain pointing to Cloudflare Pages"
    },
    {
      "type": "CNAME", 
      "name": "www",
      "content": "astropal.io",
      "ttl": 1,
      "proxied": true,
      "comment": "WWW subdomain redirect to root"
    },
    {
      "type": "CNAME",
      "name": "api",
      "content": "astropal-api.tim-611.workers.dev", 
      "ttl": 1,
      "proxied": true,
      "comment": "API subdomain for Workers"
    },
    {
      "type": "TXT",
      "name": "@",
      "content": "v=spf1 include:spf.resend.com ~all",
      "ttl": 1,
      "comment": "SPF record for Resend email delivery"
    },
    {
      "type": "TXT",
      "name": "_dmarc",
      "content": "v=DMARC1; p=quarantine; rua=mailto:dmarc@astropal.io",
      "ttl": 1,
      "comment": "DMARC policy for email authentication"
    },
    {
      "type": "CNAME",
      "name": "resend._domainkey",
      "content": "resend._domainkey.resend.com",
      "ttl": 1,
      "comment": "DKIM record for Resend (to be replaced with actual key)"
    }
  ],
  "page_rules": [
    {
      "url": "astropal.io/*",
      "actions": {
        "always_use_https": true,
        "ssl": "strict"
      }
    },
    {
      "url": "api.astropal.io/*", 
      "actions": {
        "cache_level": "bypass",
        "always_use_https": true
      }
    }
  ]
} 
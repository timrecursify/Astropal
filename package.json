{
  "name": "astropal",
  "private": true,
  "version": "1.0.0",
  "description": "Astropal Newsletter Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "./cloudflare-build.sh",
    "build:dev": "npm run build --workspaces",
    "build:frontend": "cd apps/web && npm run build",
    "build:web-only": "npm run build --workspace=apps/web",
    "dev": "./scripts/dev.sh",
    "dev-setup": "husky install",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "deploy": "./scripts/deploy.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
} 